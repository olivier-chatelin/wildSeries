{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table catégories</h1>
    {% for category in categories %}
        <h2>{{ loop.index }} / Catégorie: <a href="{{ path('categories_category_show',{'categoryName': category.name}) }}">{{ category.name }}</a></h2>
    {% endfor %}
    
{% endblock %}
