{# templates/program/show.html.twig #}

{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}
{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="/uploads/{{program.poster}}" alt="{{ program.title }} poster" width="200px">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <a id="watchlist" href="{{ path('program_watchlist', {slug: program.slug})}}">
                <i class="{{ app.user.isInWatchlist(program) ? 'fas' : 'far' }} fa-heart"></i>
            </a>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>
    <h2>Saisons</h2>
    <ul>
        {% for season in seasons %}
            <li><a href="{{ path('program_season_show',{'program' : program.id, 'season' : season.id}) }}">Saison {{ season.number }}</a></li>
        {% else %}
            Pas de saison pour l'instant
        {% endfor %}
    </ul>
    <strong>Acteurs :</strong>
    <ul>
        {% for actor in program.actors %}
            <li><a href="{{ path("actor_show", {'slug': actor.slug}) }}">{{ actor.name }}</a> </li>
        {% else %}
            <li>Aucun acteur pour cette série</li>
        {% endfor %}
    </ul>
    <p>
        <a href="{{ path('program_edit',{'slug':program.slug}) }}">Modifier la fiche</a>
    </p>
    <p>
        <a href="{{ path('program_index') }}">
            Retour à la liste des programmes
        </a>
    </p>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('heartToggler') }}
{% endblock %}